<div class= "container-height">
<div class="container mt-5">
  <h1 class="details-reservation">Reserved Unicorns</h1>
  <div class="row-header" class= "details-reservation">
    <div class="col-content">
      <div class="row bg-light py-3" class= "row-reservation">
        <div class="col">User</div>
        <div class="col">Unicorn</div>
        <div class="col">Date</div>
        <div class="col">Approved</div>
        <div class="col">Accept Reservation</div>
      </div>
    </div>
  </div>

  <% @reservations.each do |reservation|%>
    <div class="row">
      <div class="col"> <%= reservation.user.first_name %></div>
      <div class="col"> <%= reservation.unicorn.name %></div>
      <div class="col"> <%= reservation.date %></div>
      <div class="col"> <%= reservation.approved ? 'Yes' : 'No' %></div>
      <div class="col">
        <% if reservation %>
          <div class="btn-group">
          <%= link_to accept_reservation_path(reservation), data: { turbo_method: :patch }, class: 'btn btn-success' do %>
            <i class="fas fa-check"></i> Accept
              <% end %>
          <%= link_to decline_reservation_path(reservation), data: { turbo_method: :patch },  class: 'btn btn-danger' do %>
            <i class="fas fa-times"></i> Decline
              <% end %>
        <% else %>
          <%= "Approved" %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
